function add_annotation() {
    echo -e "\n# $(date '+%Y-%m-%d %H:%M:%S')\n" >> "$1"
#    wl-paste -t text >> "$1";
    selected=$(xsel)
    echo $selected >> "$1"
#    echo -e "\n> <!!>\n\n" >> $1
}

add_annotation "$file"
