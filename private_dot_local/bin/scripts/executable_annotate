add_annotation() {
    printf '%s' "# $(date '+%Y-%m-%d %H:%M:%S')" >> "$1"
    echo "\n>\n" >> $1
    wl-paste -t text >> "$1";
    echo "\n> <!!>\n\n" >> $1
#    selected=$(xsel)
#    echo "$selected" >> "$1"
}

add_annotation "$file"
