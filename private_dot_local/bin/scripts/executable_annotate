#!/bin/sh

file="$ZET_DIR/Annotations/annotations.markdown"

function exists_or_create() {
    if [[ -f "$2" ]]; then
        echo "Not Creating the note: File is already there"
    else
        echo -e "$1 \n$2"
        echo -e "Book: $1 \n---" > "$2"
    fi
}

function add_annotation() {
    echo -e "---\n" >> "$1";
    wl-paste -t text >> "$1";
    echo -e "\n> <!!>\n\n" >> $1
}

add_annotation "$file"
