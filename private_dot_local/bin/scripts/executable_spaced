#!/usr/bin/env python3
# '''Create spaced repetitions iCal file from an Event'''
from supermemo2 import SMTwo, day_mon_year
from ics import Calendar, Event
import sys

arg1 = sys.argv[1]
arg2 = sys.argv[2]
c = Calendar()

#e0 = Event()
#e0.name = arg1
#e0.begin = arg2
#c.events.add(e0)
#c.events
#with open('/home/electron/.local/share/calendars/spaced/{}.ics'.format(arg1), 'w') as f:
#    f.writelines(c)

review = SMTwo.first_review(5, arg2, day_mon_year)
# print(review.review_date)

e1 = Event()
e1.name = arg1
e1.begin = review.review_date
c.events.add(e1)
c.events
with open('/home/electron/.local/share/calendars/spaced/{}.ics'.format(arg1), 'w') as f:
    f.writelines(c)

review = SMTwo(review.easiness, review.interval, review.repetitions).review(5, review.review_date)
# print(review.review_date)

e2 = Event()
e2.name = arg1
e2.begin = review.review_date
c.events.add(e2)
c.events
with open('/home/electron/.local/share/calendars/spaced/{}.ics'.format(arg1), 'w') as f:
    f.writelines(c)

review = SMTwo(review.easiness, review.interval, review.repetitions).review(5, review.review_date)
# print(review.review_date)

e3 = Event()
e3.name = arg1
e3.begin = review.review_date
c.events.add(e3)
c.events
with open('/home/electron/.local/share/calendars/spaced/{}.ics'.format(arg1), 'w') as f:
    f.writelines(c)

review = SMTwo(review.easiness, review.interval, review.repetitions).review(5, review.review_date)
# print(review.review_date)

e4 = Event()
e4.name = arg1
e4.begin = review.review_date
c.events.add(e4)
c.events
with open('/home/electron/.local/share/calendars/spaced/{}.ics'.format(arg1), 'w') as f:
    f.writelines(c)

review = SMTwo(review.easiness, review.interval, review.repetitions).review(5, review.review_date)
# print(review.review_date)

e5 = Event()
e5.name = arg1
e5.begin = review.review_date
c.events.add(e5)
c.events
with open('/home/electron/.local/share/calendars/spaced/{}.ics'.format(arg1), 'w') as f:
    f.writelines(c)

review = SMTwo(review.easiness, review.interval, review.repetitions).review(5, review.review_date)
# print(review.review_date)

e6 = Event()
e6.name = arg1
e6.begin = review.review_date
c.events.add(e6)
c.events
with open('/home/electron/.local/share/calendars/spaced/{}.ics'.format(arg1), 'w') as f:
