#!/bin/sh

# Autostart
safeeyes & disown
mopidy & disown
beet web & disown
python3 ~/.local/bin/inkscape-shortcut-manager/main.py & disown
rsshub.start & disown
bukuserver run --host 127.0.0.1 --port 5001 & disown
cd $ARCHIVE/archivebox ; archivebox server 0.0.0.0:8000 & disown
promnesia serve & disown
mpv_history_daemon_restart $HPIDATA/MPV
syncthing -no-browser & disown
aw-server & disown
calcurse --daemon
# yams & disown

# Daily Feed
sfeed_update $HOME/.config/sfeed/sfeedrc-daily ; date $>/tmp/cron-sfeed-daily.log
sfeed_html $HOME/.local/share/sfeed/feeds-daily/* > $HOME/.local/share/sfeed/feeds-daily.html
sfeed_plain $HOME/.local/share/sfeed/feeds-daily/* > $HOME/.local/share/sfeed/feeds-daily.txt
newsboat --url-file=$HOME/.config/newsboat/daily-list -x reload print-unread --cache-file=~/.local/share/newsboat/daily-cache.db | awk '{print $1;}' > $HOME/.config/newsboat/today-unread-count

# Daily Tasks
moonphase
# markmap $ZET_DIR/000-index.md > $ZET_DIR/000-index.html
tree -f -L 1 -I "*.txt|*.html|*/" $ZET_DIR > $HPIDATA/001-tree.txt
tree-index-md $ZET_DIR > $ZET_DIR/000-index.md
dconf dump / > $HOME/.config/saved_settings.dconf
