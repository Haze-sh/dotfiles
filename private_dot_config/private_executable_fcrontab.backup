#!/bin/sh

# Sync Tasks
@ 01 topydo ls -f ical > $HOME/.local/share/calendars/todo/todo.ics
@ 01 . $HOME/.zshenv; python $HOME/.local/bin/scripts/todo2org.py $TODO_FILE
@ 01 . $HOME/.zshenv; python $HOME/.local/bin/scripts/todo2org.py $TODO_FILE --reverse
@ 01 . $HOME/.zshenv; python $HOME/.local/bin/scripts/todo2org.py $DONE_FILE
@ 01 . $HOME/.zshenv; python $HOME/.local/bin/scripts/todo2org.py $DONE_FILE --reverse
@ 01 . $HOME/.zshenv; jrnl --config-override journals.default $DEFAULT_JRNL --format md > $GTD_DIR/Journal.md
@ 01 . $HOME/.zshenv; $HOME/.local/bin/scripts/syncbuku ; date &>/tmp/cron-buku-sync.log
@ 15 . $HOME/.zshenv; $HOME/.local/bin/scripts/syncalendar ; date &>/tmp/cron-calcurse.log
@ 20 . $HOME/.zshenv; $HOME/.local/bin/scripts/syncmail ; date &>/tmp/cron-syncmail.log
@ 30 calcurse -x > $HOME/.local/share/calendars/main/main.ics
@ 180 . $HOME/.zshenv; promnesia index

## Exports
@ 1d . $HOME/.zshenv; python -m hypexport.export --username $(pass show user) --token $(pass show hypothesis) > $ZET_DIR/hyp-annotations.json
@ 1d . $HOME/.zshenv; python -m orger.modules.hypothesis --to $ZET_DIR/hyp-annotations.org
@ 1d . $HOME/.zshenv; torsimany $ZET_DIR/hyp-annotations.json
@ 60 . $HOME/.zshenv; tree -f -L 1 -I "*.txt|*.html|*/" $ZET_DIR > $ZET_DIR/References/tree.txt
@ 60 . $HOME/.zshenv; tree-index-md $ZET_DIR > $ZET_DIR/000-index.md
@ 60 . $HOME/.zshenv; rsync $HOME/.local/share/mopidy/advanced_scrobbler/advanced_scrobbler.db $HPIDATA
@ 60 . $HOME/.zshenv; wget http://localhost:5600/api/0/export -O $HPIDATA/ActivityWatch/export.json
@ 60 . $HOME/.zshenv; browserexport save --profile sx15jrar.User.js -b firefox --to $HPIDATA/Browser
@ 60 . $HOME/.zshenv; browserexport merge --json $HPIDATA/Browser/*.sqlite > $HPIDATA/Browser/firefox-history.json
@ 60 . $HOME/.zshenv; merge-browser-history
@ 60 . $HOME/.zshenv; merge-mpv-data
@ 60 . $HOME/.pam_environment; . $HOME/.zshenv; chezmoi add --encrypt $HOME/.cache/zsh

# Daily Feed
@ 60 sfeed_update $HOME/.config/sfeed/sfeedrc-daily ; date $>/tmp/cron-sfeed-daily.log
@ 60 sfeed_html $HOME/.local/share/sfeed/feeds-daily/* > $HOME/.local/share/sfeed/feeds-daily.html
@ 60 sfeed_plain $HOME/.local/share/sfeed/feeds-daily/* > $HOME/.local/share/sfeed/feeds-daily.txt
@ 60 newsboat --url-file=$HOME/.config/newsboat/daily-list -x reload print-unread --cache-file=$HOME/.local/share/newsboat/daily-cache.db | awk '{print $1;}' > $HOME/.config/newsboat/today-unread-count

# Total Feed
%hours * 06-09,21-00 * * * sfeed_update $HOME/.config/sfeed/sfeedrc ; date $>/tmp/cron-sfeed.log
%hours * 06-09,21-00 * * * sfeed_html $HOME/.local/share/sfeed/feeds/* > $HOME/.local/share/sfeed/feeds.html
%hours * 06-09,21-00 * * * sfeed_plain $HOME/.local/share/sfeed/feeds/* > $HOME/.local/share/sfeed/feeds.txt
%hours * 06-09,21-00 * * * newsboat --url-file=$HOME/.config/newsboat/urls -x reload

# Cleanup
@ 1d rm $HOME/core
@ 1d rm $HOME/.bg
@ 1d rm $HOME/.yarnrc
@ 1d rm $HOME/package.json
@ 1d rm $HOME/package-lock.json
@ 1d rm $HOME/.autotiling.bolt
@ 1d rm -rf $HOME/.npm
@ 1d rm -rf $HOME/node_modules
@ 1d rm -rf $HOME/.node-gyp
@ 1d rm -rf $HOME/.electron
@ 1d rm -rf $HOME/.electron-gyp
@ 1d rm -rf $HOME/.nuget
@ 1d rm -rf $HOME/.dotnet
@ 1d rm -rf $HOME/.pki
@ 1d rm -rf $HOME/.vscode-oss

# Backup
@ 1d dconf dump / > $HOME/.config/saved_settings.dconf

# Notifications
@ 20160 notify-send "Upgrade system"
@ 20160 notify-send "Clear caches"
